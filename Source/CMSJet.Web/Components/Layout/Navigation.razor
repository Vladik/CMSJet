@inject NavigationManager NavigationManager

<RadzenSidebar Style="width:auto">
    <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Normal" JustifyContent="JustifyContent.SpaceBetween" class="h-100">
        <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)">
            <RadzenPanelMenuItem Text="Dashboard" Icon="dashboard" Path="/"/>
            <RadzenPanelMenuItem Text="Migrations" Icon="Dashboard" Path="/migrations"/>
            <RadzenPanelMenuItem Text="Connectors" Icon="settings_input_component" Path="/devices"/>
            <RadzenPanelMenuItem Text="Settings" Icon="settings" Path="/settings"/>
            <RadzenPanelMenuItem Text="Login" Icon="lock" Path="/account/login"/>
        </RadzenPanelMenu>
    </RadzenStack>
</RadzenSidebar>

@code {

    [CascadingParameter] private HttpContext HttpContext { get; set; } = default!;
    bool sidebarExpanded = false;
    protected override async Task OnInitializedAsync()
    {

    }
}

